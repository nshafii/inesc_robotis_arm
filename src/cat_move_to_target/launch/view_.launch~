    <arg name="debug" value="$(arg debug)"/>
  </include> -->

  <!-- If database loading was enabled, start mongodb as well -->
  <include file="$(find robotis_manipulator_h_moveit)/launch/default_warehouse_db.launch" if="$(arg db)"/>

